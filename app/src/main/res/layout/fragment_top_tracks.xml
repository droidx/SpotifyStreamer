<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.priteshsankhe.spotifystreamer.artist.TopTracksActivityFragment">

    <include layout="@layout/progressbar" />

    <TextView
        android:id="@+id/search_results_not_found_textview"
        android:text="@string/no_artist_found"
        style="@style/NoResultsTextViewStyle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/top_tracks_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
