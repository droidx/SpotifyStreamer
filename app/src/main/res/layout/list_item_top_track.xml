<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="?attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/list_item_top_track_thumbnail"
        android:layout_width="@dimen/track_image_view_width"
        android:layout_height="@dimen/track_image_view_height"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        >
        
        <TextView
            android:id="@+id/list_item_top_track_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paradise"/>

        <TextView
            android:id="@+id/list_item_top_track_album_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mylo Xylo"/>

    </LinearLayout>

</LinearLayout>